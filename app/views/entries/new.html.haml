%header{ class: "messages"}
  - if flash[:notice] 
    %p.notice
      = flash[:notice]
  - if flash[:alert] 
    %p.alert
      = flash[:alert]

%section{class: 'entry'}
  = form_for @entry do |f|
    - if @entry.errors.any?
      .errors
        - @entry.errors.full_messages.each do |msg|
          %p
            = msg
    .field
      = f.label :name, "Enter a name:", class: "hidden"
      = f.text_field :name, autofocus: 'autofocus', placeholder: "Enter a name"
    .submit
      = f.submit "Submit"

.random
  %p
    Or
  = link_to "Replay a random name", random_path, class: "stylish_button"
